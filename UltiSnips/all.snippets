import datetime

def getdate():
	return datetime.datetime.now().strftime("%Y.%m.%d %X")

def isWORDbegin(line, s):
	line = line[:len(line)-len(s)]
	return len(line) == 0 or line[-1].isspace()

endglobal

snippet date "date" w
`!p snip.rv = getdate()`
endsnippet
